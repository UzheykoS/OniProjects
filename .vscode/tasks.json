{
	"version": "2.0.0",
	"command": "${workspaceRoot}/node_modules/.bin/webpack",
	"args": [
		"--display-modules"
	],
	"echoCommand": true,
	"tasks": [
		{
			"label": "webpack_dev_watch",
			"type": "shell",
			"command": "${workspaceRoot}/node_modules/.bin/webpack",
			"args": [
				"--display-modules",
				"-d",
				"--watch",
				"--color"
			],
			"problemMatcher": [],
			"group": {
				"_id": "build",
				"isDefault": false
			}
		},
		{
			"label": "webpack_dev_single",
			"type": "shell",
			"command": "${workspaceRoot}/node_modules/.bin/webpack",
			"args": [
				"--display-modules",
				"-d",
				"--color"
			],
			"problemMatcher": [],
			"group": {
				"_id": "build",
				"isDefault": false
			}
		}
	]
}